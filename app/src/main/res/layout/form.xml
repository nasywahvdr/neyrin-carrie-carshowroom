<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/gradientbedaw"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:text="Entry Form To Your Cart"
            android:textColor="@color/black"
            android:textSize="25dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradientbeda"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/cartaw"
            android:tint="@color/black"/>

        <EditText
            android:id="@+id/form1"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:hint="Enter Your Name"
            android:background="@drawable/whitebut"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/form2"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:hint="Enter Your Email"
            android:background="@drawable/whitebut"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/form3"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:hint="Enter Your Phone"
            android:background="@drawable/whitebut"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/form4"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:hint="Enter Your Address"
            android:background="@drawable/whitebut"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/enterb"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/gradientbedaw"
            android:fontFamily="@font/rubik_medium"
            android:text="Enter"
            android:layout_marginBottom="30dp"
            android:textColor="@color/black"
            android:textSize="20dp" />


    </LinearLayout>


</LinearLayout>