<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/splashni"
        android:layout_width="431dp"
        android:layout_height="290dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/logonobg" />

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:background="@drawable/gradientbeda"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:text="About This App"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="360dp"
            android:layout_height="120dp"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:text="Aplikasi ini dibuat dengan tujuan untuk Tugas Pemrograman Bergerak Pa Chandra, dan merupakan projek dari Nasywah Aqila Vadrian XI RPL B,Showroom Mobil"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <Button
            android:id="@+id/toback"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/grad"
            android:fontFamily="@font/rubik_medium"
            android:text="Back"
            android:textColor="@color/black"
            android:textSize="20dp" />


    </LinearLayout>

</LinearLayout>